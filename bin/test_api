#!/bin/bash
# BNTR_API


# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail
set -x

usage() {
  echo "Usage: $0 (deployed | local)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

case $1 in
  "deployed")
    # Display routes 
    curl -X GET http://ec2-34-238-139-153.compute-1.amazonaws.com/api/routes/

    # Insert users into the database 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "cmcgravey", "password": "password"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "samimud", "password": "fartsniffer"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "ianglee", "password": "snifferfart"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/

    # Update existing user's password 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "password", "new_password": "buttfart"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/2/

    # Update all users' banter to 50
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "banter", "new_banter": 50}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/1/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "banter", "new_banter": 50}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/2/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "banter", "new_banter": 50}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/3/

    # Verify user's login information
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "samimud", "password": "buttfart"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/logon/

    # Fetch user's information
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/2/

    # Insert two teams into the database
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "name": "Chelsea", "abbr": "CHE", "logo": "chelsea.png"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/teams/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "name": "Manchester United", "abbr": "UTD", "logo": "man_utd.png"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/teams/

    # Fetch team information
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/teams/1/

    # Insert game into the database 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "teamID1": "1", "teamID2": "2"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/games/

    # GET all games with PENDING status
    curl -X GET http://ec2-34-238-139-153.compute-1.amazonaws.com/api/games/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # GET game by gameID 
    curl -X GET http://ec2-34-238-139-153.compute-1.amazonaws.com/api/games/1/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # Update game status to IN PLAY
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "update": [1, 3, "22:00"], "status": "IN PLAY"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/games/1/

    # Insert questions for gameID 1 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "question_stage": "Pregame", "label": "h2h", "question": "Who is going to win?", "opt1": ["Everton", 15, 6], "opt2": ["Liverpool", 36, 14], "opt3": ["Draw", 17, 6]}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/questions/1/

    # Fetch questions for gameID 1 
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/questions/1/

    # Insert answers for questions 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt1"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/answers/1/1/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt2"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/answers/1/2/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt1"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/answers/1/3/

    # Update answers 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt1"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/questions/update/1/

    # View user's scores updates 
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/1/
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/2/
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/3/

    # Fetch leaderboards
    curl -X GET -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b"}' http://ec2-34-238-139-153.compute-1.amazonaws.com/api/users/leaders/
    ;;
  "local")
    # Display routes 
    curl -X GET http://localhost:8000/api/routes/

    # Insert users into the database 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "cmcgravey", "password": "password"}' http://localhost:8000/api/users/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "samimud", "password": "fartsniffer"}' http://localhost:8000/api/users/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "ianglee", "password": "snifferfart"}' http://localhost:8000/api/users/

    # Update existing user's password 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "password", "new_password": "buttfart"}' http://localhost:8000/api/users/2/

    # Update all users' banter to 50
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "banter", "new_banter": 50}' http://localhost:8000/api/users/1/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "banter", "new_banter": 50}' http://localhost:8000/api/users/2/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "type": "banter", "new_banter": 50}' http://localhost:8000/api/users/3/

    # Verify user's login information
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "username": "samimud", "password": "buttfart"}' http://localhost:8000/api/users/logon/

    # Fetch user's information
    curl -X GET http://localhost:8000/api/users/2/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # Insert two teams into the database
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "name": "Chelsea", "abbr": "CHE", "logo": "chelsea.png"}' http://localhost:8000/api/teams/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "name": "Manchester United", "abbr": "UTD", "logo": "man_utd.png"}' http://localhost:8000/api/teams/

    # GET team information
    curl -X GET http://localhost:8000/api/teams/1/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # Insert game into the database 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "teamID1": "1", "teamID2": "2"}' http://localhost:8000/api/games/

    # GET all games with PENDING status
    curl -X GET http://localhost:8000/api/games/status/PENDING/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # GET game by gameID 
    curl -X GET http://localhost:8000/api/games/1/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # Update game status to IN PLAY
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "update": [1, 3, "22:00"], "status": "IN PLAY"}' http://localhost:8000/api/games/1/

    # Insert questions for gameID 1 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "question_stage": "Pregame", "label": "h2h", "question": "Who is going to win?", "opt1": ["Everton", 15, 6], "opt2": ["Liverpool", 36, 14], "opt3": ["Draw", 17, 6]}' http://localhost:8000/api/questions/1/

    # Fetch questions for gameID 1 
    curl -X GET http://localhost:8000/api/questions/1/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # Insert answers for questions 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt1"}' http://localhost:8000/api/answers/1/1/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt2"}' http://localhost:8000/api/answers/1/2/
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt1"}' http://localhost:8000/api/answers/1/3/

    # Update answers 
    curl -X POST -H "Content-Type: application/json" -d '{"api_key": "87ab0a3db51d297d3d1cf2d4dcdcb71b", "answer": "opt1"}' http://localhost:8000/api/questions/update/1/

    # View user's scores updates 
    curl -X GET http://localhost:8000/api/users/1/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b
    curl -X GET http://localhost:8000/api/users/2/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b
    curl -X GET http://localhost:8000/api/users/3/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b

    # Fetch leaderboards
    curl -X GET http://localhost:8000/api/users/leaders/?api_key=87ab0a3db51d297d3d1cf2d4dcdcb71b
    ;;
esac